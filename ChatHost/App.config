<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>
	<system.serviceModel>
		<behaviors>
			<serviceBehaviors>
				<behavior name="metadataBehavior">
					<serviceMetadata />
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<services>
			<service name="ChatService.Service1" behaviorConfiguration="metadataBehavior">
				<endpoint
                    address="net.tcp://localhost:8000/ChatService"
                    binding="netTcpBinding"
                    contract="ChatService.IService1" />

				<endpoint
                    address="net.tcp://localhost:8000/ChatService/mex"
                    binding="mexTcpBinding"
                    contract="IMetadataExchange" />

				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:8000/ChatService"/>
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>
</configuration>